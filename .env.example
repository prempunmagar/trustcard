# TrustCard Environment Variables
# Copy this to .env and fill in your values

# Application
DEBUG=True
APP_NAME=TrustCard

# Database (for Docker)
DATABASE_URL=postgresql://trustcard:trustcard@db:5432/trustcard

# Redis & Celery
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Instagram Authentication
# IMPORTANT: Use a dedicated test account, NOT your personal account
# Create a throwaway Instagram account for development
INSTAGRAM_USERNAME=your_test_account_username
INSTAGRAM_PASSWORD=your_test_account_password

# Security
SECRET_KEY=dev-secret-key-change-in-production
